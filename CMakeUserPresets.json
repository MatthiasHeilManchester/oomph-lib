{
  "version": 5,
  "configurePresets": [
    {
      "name": "macos_arm64",
      "inherits": "base",
      "displayName": "macos_arm64",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_APPLE_SILICON_PROCESSOR": "arm64",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_PREFIX_PATH": "/opt/homebrew/opt/openblas/;${sourceDir}/build/",
        "OOMPH_BUILD_DEMO_DRIVERS_WITH_LIBRARY": "OFF",
        "OOMPH_TRANSITION_TO_VERSION_3": "OFF",
        "OOMPH_ENABLE_MPI": "OFF",
        "OOMPH_ENABLE_DOC_BUILD": "OFF",
        "OOMPH_ENABLE_USE_OPENBLAS": "ON",
        "OOMPH_WANT_NLOHMANN_JSON": "OFF",
        "OOMPH_WANT_SPDLOG": "OFF",
        "OOMPH_WANT_HYPRE": "OFF",
        "OOMPH_WANT_MUMPS": "OFF",
        "OOMPH_WANT_TRILINOS": "OFF"
      },
      "warnings": {
        "unusedCli": true
      }
    },
    {
      "name": "macos_arm64_mpi",
      "inherits": "macos_arm64",
      "displayName": "macos_arm64_mpi",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "OOMPH_BUILD_DEMO_DRIVERS_WITH_LIBRARY": "OFF",
        "OOMPH_ENABLE_USE_OPENBLAS": "ON",
        "OOMPH_ENABLE_MPI": "ON",
        "OOMPH_WANT_MUMPS": "ON"
      },
      "warnings": {
        "unusedCli": true
      }
    }
  ],
  "buildPresets": [
    {
      "name": "macos_arm64",
      "configurePreset": "macos_arm64",
      "jobs": 4
    }
  ],
  "testPresets": [
    {
      "name": "macos_arm64",
      "configurePreset": "dummy",
      "output": {
        "outputOnFailure": true,
        "labelSummary": false
      },
      "execution": {
        "timeout": 10000,
        "noTestsAction": "error",
        "jobs": 4
      }
    }
  ]
}
