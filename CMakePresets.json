{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "BUILD_SHARED_LIBS": "OFF",
        "CMAKE_BUILD_TYPE": "Release",
        "OOMPH_BUILD_DEMO_DRIVERS_WITH_LIBRARY": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "OOMPH_DONT_SILENCE_USELESS_WARNINGS": "OFF",
        "OOMPH_ENABLE_CODE_COVERAGE": "OFF",
        "OOMPH_ENABLE_DOC_BUILD": "OFF",
        "OOMPH_ENABLE_MPI": "OFF",
        "OOMPH_ENABLE_PARANOID": "OFF",
        "OOMPH_ENABLE_RANGE_CHECKING": "OFF",
        "OOMPH_ENABLE_SYMBOLIC_LINKS_FOR_HEADERS": "ON",
        "OOMPH_TRANSITION_TO_VERSION_3": "OFF",
        "OOMPH_USE_DEPRECATED_SUPERLU": "OFF",
        "OOMPH_ENABLE_USE_OPENBLAS": "OFF",
        "OOMPH_WANT_CGAL": "OFF",
        "OOMPH_WANT_HYPRE": "OFF",
        "OOMPH_WANT_MUMPS": "OFF",
        "OOMPH_WANT_NLOHMANN_JSON": "OFF",
        "OOMPH_WANT_SPDLOG": "OFF",
        "OOMPH_WANT_TRILINOS": "OFF"
      }
    },
    {
      "name": "CI-build",
      "inherits": "base",
      "displayName": "Build Config for CI/CD",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "$penv{OOMPH_INSTALL_PATH}"
      }
    },
    {
      "name": "CI-mpi-build",
      "inherits": "base",
      "displayName": "MPI Build Config for CI/CD",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "$penv{OOMPH_INSTALL_PATH}",
        "OOMPH_ENABLE_MPI": "ON",
        "OOMPH_WANT_TRILINOS": "ON",
        "OOMPH_WANT_MUMPS": "ON"
      },
      "environment": {
        "CC": "mpicc",
        "CXX": "mpic++",
        "FC": "mpifort"
      }
    },
    {
      "name": "CI-demo-drivers",
      "displayName": "Demo Drivers Build Config for CI/CD",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "CI-build-with-coverage",
      "inherits": "CI-build",
      "displayName": "Build Config for CI/CD code coverage",
      "cacheVariables": {
        "OOMPH_ENABLE_CODE_COVERAGE": "ON"
      }
    },
    {
      "name": "CI-mpi-build-with-coverage",
      "inherits": "CI-mpi-build",
      "displayName": "MPI Build Config for CI/CD code coverage",
      "cacheVariables": {
        "OOMPH_ENABLE_CODE_COVERAGE": "ON"
      }
    },
    {
      "name": "CI-demo-drivers-with-coverage",
      "inherits": "CI-demo-drivers",
      "displayName": "Demo Drivers Build Config for CI/CD code coverage",
      "cacheVariables": {
        "OOMPH_ENABLE_CODE_COVERAGE": "ON",
        "CMAKE_PREFIX_PATH": "$penv{OOMPH_BUILD_PATH}"
      }
    },
    {
      "name": "optimised",
      "inherits": "base",
      "displayName": "Optimised Config",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "debug",
      "inherits": "base",
      "displayName": "Debug Config",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "OOMPH_ENABLE_PARANOID": "ON",
        "OOMPH_ENABLE_RANGE_CHECKING": "ON"
      }
    },
    {
      "name": "mpi",
      "inherits": "base",
      "displayName": "Default MPI Config",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-mpi",
      "environment": {
        "CC": "mpicc",
        "CXX": "mpic++",
        "FC": "mpifort"
      }
    },
    {
      "name": "ninja-multi",
      "inherits": "base",
      "displayName": "Ninja Multi-Config",
      "generator": "Ninja Multi-Config"
    }
  ],
  "buildPresets": [
    {
      "name": "CI-build",
      "configurePreset": "CI-build"
    },
    {
      "name": "CI-demo-drivers",
      "configurePreset": "CI-demo-drivers"
    },
    {
      "name": "CI-build-with-coverage",
      "configurePreset": "CI-build-with-coverage"
    },
    {
      "name": "CI-demo-drivers-with-coverage",
      "configurePreset": "CI-demo-drivers-with-coverage"
    },
    {
      "name": "optimised",
      "configurePreset": "optimised"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "mpi",
      "configurePreset": "mpi"
    },
    {
      "name": "ninja-multi",
      "configurePreset": "ninja-multi"
    }
  ],
  "testPresets": [
    {
      "name": "test-base",
      "hidden": true,
      "output": {
        "outputOnFailure": true,
        "labelSummary": false
      },
      "execution": {
        "timeout": 10000,
        "noTestsAction": "error"
      }
    },
    {
      "name": "ninja-multi",
      "configurePreset": "ninja-multi",
      "inherits": "test-base"
    },
    {
      "name": "CI-demo-drivers",
      "configurePreset": "CI-demo-drivers",
      "inherits": "test-base",
      "filter": {
        "include": {
          "name": "axisym_navier_stokes.torus"
        },
        "exclude": {}
      }
    },
    {
      "name": "CI-demo-drivers-with-coverage",
      "configurePreset": "CI-demo-drivers-with-coverage",
      "inherits": "test-base"
    },
    {
      "name": "optimised",
      "configurePreset": "optimised",
      "inherits": "test-base"
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "inherits": "test-base"
    },
    {
      "name": "mpi",
      "configurePreset": "mpi",
      "inherits": "test-base"
    }
  ]
}
